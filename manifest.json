{
  "manifest_version": 2,

  "name": "Canopy GUI Enhancer",
  "short_name": "CGE",
  "description": "This extension enhance the standard CambiumNetworks Canopy Web GUI",
  "version": "1.7",
  "version_name": "1.7",
  "author": "Mattia Basone <mattia.basone@gmail.com>",

  "browser_action": {
    "default_icon": "icon_128.png",
    "default_popup": "html/popup.html",
    "default_title": "Canopy GUI Enhancer - Edit settings"
  },
  "icons": {
    "128": "icon_128.png"
  },
  "permissions": [
    "notifications",
    "storage",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "background.js"
      ],
      "run_at": "document_idle"
    }],
  "web_accessible_resources":[
    "utils.js",
    "CanopyEnhancer.js",
    "lib/Chart.min.js",
    "css/bootstrap-mini.css",
    "css/gui.css",
    "css/style.css"
  ],
  "background": {
    "scripts": [
      "update_checker.js"
    ],
    "persistent": false
  }
}